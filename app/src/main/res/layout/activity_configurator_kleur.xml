<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfiguratorKleurActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvTopNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selectortp"
        app:itemIconTint="@drawable/selectortp"
        app:menu="@menu/menu_navigation_top" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="-25dp"
        app:srcCompat="@drawable/lightyearone" />

    <TextView
        android:id="@+id/tvConfiguratorKleur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true"
        android:text="Selecteer uw kleur:"
        android:textColor="#000000"
        android:textSize="20dp" />

    <RadioGroup
        android:id="@+id/rgKeuzeKleur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginStart="70dp" >

        <RadioButton
            android:id="@+id/rbKleurZwart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kleur \nPrijs" />

        <RadioButton
            android:id="@+id/rbKleurWit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kleur \nPrijs" />

        <RadioButton
            android:id="@+id/rbKleurRood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kleur \nPrijs" />

        <RadioButton
            android:id="@+id/rbKleurBlauw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kleur \nPrijs" />

    </RadioGroup>

    <Button
        android:id="@+id/btnVolgende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnVolgende"
        android:width="175dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp" />

</RelativeLayout>