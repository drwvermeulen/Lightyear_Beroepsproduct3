<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ConfiguratorActivity">

    <ImageView
        android:id="@+id/ivConfiguratorLightyear"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/lightyearone_wit" />

    <TextView
        android:id="@+id/tvConfiguratorModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:text="Selecteer uw model:"
        android:textSize="20dp"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/rgKeuzeModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" >

        <RadioButton
            android:id="@+id/rbLightyearOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model \nPrijs"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:id="@+id/rbLightyearOnePioneer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Model \nPrijs"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvPrijs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¬ "
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp" />

    <Button
        android:id="@+id/btnConfigureren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnConfigureren"
        android:width="175dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnvBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selectorbttm"
        app:itemIconTint="@drawable/selectorbttm"
        app:menu="@menu/menu_navigation_bottom" />

</RelativeLayout>